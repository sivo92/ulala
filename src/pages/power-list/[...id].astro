---
import Layout from "../../layouts/Layout.astro";
import PowerList from '../../components/PowerList.jsx';

interface Dumps {
    id: string;
    file: string;
}

interface Char {
  char_id: number;
  char_name: string;
  class_name: string;
  class_type: string;
  char_cp: number;
  char_level: number;
  pet_level: number;
};

interface Dump {
  chars: Char[];
  created_at: Date;
};

const { id } = Astro.params;

const dumps = await fetch("https://ulala-au3.pages.dev/dumps.json").then(resp => resp.json());

const index = dumps.findIndex((dump: Dumps) => dump.id === id);
if (index === -1) {
    return Astro.redirect("/power-lists");
}

const dump = dumps[index];
const previous_dump = index > 0 ? dumps[index - 1] : null;

let current_data: Dump;
let previous_data: Dump | null = null;
try {
    current_data = await fetch(`${import.meta.env.PUBLIC_DUMPS_URL}/${dump.file}`).then(resp => resp.json());
    if (previous_dump) {
        previous_data = await fetch(`${import.meta.env.PUBLIC_DUMPS_URL}/${previous_dump.file}`).then(resp => resp.json());
    }
} catch (error) {
    return Astro.redirect("/power-lists");
}
---

<Layout title={dump.id}>
    <PowerList client:load current_data={current_data} previous_data={previous_data} />
</Layout>

