---
import Layout from "../layouts/Layout.astro";

interface Dumps {
    id: string;
    file: string;
}

let dumps: Dumps[] = await fetch(`${import.meta.env.PUBLIC_DUMPS_URL}/dumps.json`).then(resp => resp.json());
dumps = dumps.sort((a, b) => new Date(b.id).getTime() - new Date(a.id).getTime());
---

<Layout title="Ulala">
    <div class="flex flex-col items-center justify-center ">
        <ul class="list-decimal list-inside p-4 text-white font-bold text-lg">
            {dumps.map((dump: Dumps) => {
                return (
                    <li class="mb-2">
                        <a href={`/power-list/${dump.id}`} class="text-blue-500 hover:underline">{dump.id}</a>
                    </li>
                )
            })}
        </ul>
    </div>
</Layout>
